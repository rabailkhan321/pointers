#include<stdio.h>
func(int x, int y, int *sum, float *avg);

int main()
{
    int a,  b, sum;
    float avg;
    printf("enter 2 numbers");
    scanf("%d %d",&a,&b);
    func(a,b,&sum,&avg);
    printf("sum=%d", sum);
    printf("avg=%.2f", avg);
}
func(int x, int y, int *sum, float *avg)
{
  
     *sum=x+y;
    *avg=(float)*sum/2;
    
}
